{
    "compilerOptions": {
        "target": "ES2020",
        "module": "None",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "build/.tsc",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
