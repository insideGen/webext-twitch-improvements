{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Twitch Improvement",
    "description": "Twitch Improvement",
    "default_locale": "en",
    "permissions": [
        "windows",
        "tabs",
        "contextMenus"
    ],
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "96": "icons/icon_96.png",
        "128": "icons/icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "js": [
                "scripts/twitch.js"
            ]
        }
    ]
}
